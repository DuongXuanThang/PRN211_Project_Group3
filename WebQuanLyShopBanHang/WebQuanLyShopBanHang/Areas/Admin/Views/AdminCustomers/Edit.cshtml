@model WebQuanLyShopBanHang.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">

    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index">Danh sách khách hàng</a>
            <span class="breadcrumb-item active">Chỉnh sửa thông tin khách hàng</span>
        </nav>
    </div>
</div>
<form asp-action="Edit" asp-route-id="@Model.CustomerId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CustomerId" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Họ và tên</label>
            <input type="text" class="form-control" asp-for="FullName" placeholder="FullName">
        </div>
        <div class="form-group col-md-6">

        </div>
        <div class="form-group">
            <label for="inputEmail4">Sinh ngày</label>
            <input type="text" class="form-control" asp-for="Birthday" placeholder="Sinh ngày">
        </div>
        <div class="form-group">
            <label for="inputEmail4">Địa chỉ</label>
            <input type="text" class="form-control" asp-for="Address" placeholder="Địa chỉ">
        </div>
        <div class="form-group">
            <label for="inputEmail4">Số điện thoại</label>
            <input type="text" class="form-control" asp-for="Phone" placeholder="Số điện thoại">
        </div>
        <div class="form-group">
            <label for="inputEmail4">Email</label>
            <input type="text" class="form-control" asp-for="Email" placeholder="Email">
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
            </label>
        </div>
    </div>



    <div class="form-group">

    </div>
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index">Quay về</a>
</form>

